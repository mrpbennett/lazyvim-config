{
  "Kubernetes Deployment": {
    "prefix": "k8s-deployment",
    "body": [
      "apiVersion: apps/v1",
      "kind: Deployment",
      "metadata:",
      "  name: ${1:app-name}",
      "  namespace: ${2:default}",
      "  labels:",
      "    app: ${1:app-name}",
      "spec:",
      "  replicas: ${3:3}",
      "  selector:",
      "    matchLabels:",
      "      app: ${1:app-name}",
      "  template:",
      "    metadata:",
      "      labels:",
      "        app: ${1:app-name}",
      "    spec:",
      "      containers:",
      "      - name: ${1:app-name}",
      "        image: ${4:image:tag}",
      "        ports:",
      "        - containerPort: ${5:8080}",
      "        resources:",
      "          requests:",
      "            memory: \"${6:128Mi}\"",
      "            cpu: \"${7:250m}\"",
      "          limits:",
      "            memory: \"${8:256Mi}\"",
      "            cpu: \"${9:500m}\"",
      "$0"
    ],
    "description": "Kubernetes Deployment manifest"
  },
  "Kubernetes Service": {
    "prefix": "k8s-service",
    "body": [
      "apiVersion: v1",
      "kind: Service",
      "metadata:",
      "  name: ${1:service-name}",
      "  namespace: ${2:default}",
      "spec:",
      "  type: ${3|ClusterIP,NodePort,LoadBalancer|}",
      "  selector:",
      "    app: ${4:app-name}",
      "  ports:",
      "  - port: ${5:80}",
      "    targetPort: ${6:8080}",
      "    protocol: TCP",
      "    name: http",
      "$0"
    ],
    "description": "Kubernetes Service manifest"
  },
  "Kubernetes ConfigMap": {
    "prefix": "k8s-configmap",
    "body": [
      "apiVersion: v1",
      "kind: ConfigMap",
      "metadata:",
      "  name: ${1:config-name}",
      "  namespace: ${2:default}",
      "data:",
      "  ${3:key}: ${4:value}",
      "$0"
    ],
    "description": "Kubernetes ConfigMap"
  },
  "Kubernetes Secret": {
    "prefix": "k8s-secret",
    "body": [
      "apiVersion: v1",
      "kind: Secret",
      "metadata:",
      "  name: ${1:secret-name}",
      "  namespace: ${2:default}",
      "type: Opaque",
      "data:",
      "  ${3:key}: ${4:base64-encoded-value}",
      "$0"
    ],
    "description": "Kubernetes Secret"
  },
  "Kubernetes Ingress": {
    "prefix": "k8s-ingress",
    "body": [
      "apiVersion: networking.k8s.io/v1",
      "kind: Ingress",
      "metadata:",
      "  name: ${1:ingress-name}",
      "  namespace: ${2:default}",
      "  annotations:",
      "    ${3:key}: ${4:value}",
      "spec:",
      "  ingressClassName: ${5:nginx}",
      "  rules:",
      "  - host: ${6:example.com}",
      "    http:",
      "      paths:",
      "      - path: ${7:/}",
      "        pathType: Prefix",
      "        backend:",
      "          service:",
      "            name: ${8:service-name}",
      "            port:",
      "              number: ${9:80}",
      "$0"
    ],
    "description": "Kubernetes Ingress"
  },
  "Kubernetes StatefulSet": {
    "prefix": "k8s-statefulset",
    "body": [
      "apiVersion: apps/v1",
      "kind: StatefulSet",
      "metadata:",
      "  name: ${1:statefulset-name}",
      "  namespace: ${2:default}",
      "spec:",
      "  serviceName: ${3:service-name}",
      "  replicas: ${4:3}",
      "  selector:",
      "    matchLabels:",
      "      app: ${1:statefulset-name}",
      "  template:",
      "    metadata:",
      "      labels:",
      "        app: ${1:statefulset-name}",
      "    spec:",
      "      containers:",
      "      - name: ${1:statefulset-name}",
      "        image: ${5:image:tag}",
      "        ports:",
      "        - containerPort: ${6:8080}",
      "        volumeMounts:",
      "        - name: ${7:data}",
      "          mountPath: ${8:/data}",
      "  volumeClaimTemplates:",
      "  - metadata:",
      "      name: ${7:data}",
      "    spec:",
      "      accessModes: [ \"ReadWriteOnce\" ]",
      "      resources:",
      "        requests:",
      "          storage: ${9:1Gi}",
      "$0"
    ],
    "description": "Kubernetes StatefulSet"
  },
  "Kubernetes PersistentVolumeClaim": {
    "prefix": "k8s-pvc",
    "body": [
      "apiVersion: v1",
      "kind: PersistentVolumeClaim",
      "metadata:",
      "  name: ${1:pvc-name}",
      "  namespace: ${2:default}",
      "spec:",
      "  accessModes:",
      "    - ${3|ReadWriteOnce,ReadOnlyMany,ReadWriteMany|}",
      "  resources:",
      "    requests:",
      "      storage: ${4:1Gi}",
      "  storageClassName: ${5:standard}",
      "$0"
    ],
    "description": "Kubernetes PersistentVolumeClaim"
  },
  "Kubernetes Job": {
    "prefix": "k8s-job",
    "body": [
      "apiVersion: batch/v1",
      "kind: Job",
      "metadata:",
      "  name: ${1:job-name}",
      "  namespace: ${2:default}",
      "spec:",
      "  template:",
      "    spec:",
      "      containers:",
      "      - name: ${1:job-name}",
      "        image: ${3:image:tag}",
      "        command: [\"${4:command}\"]",
      "      restartPolicy: ${5|OnFailure,Never|}",
      "$0"
    ],
    "description": "Kubernetes Job"
  },
  "Kubernetes CronJob": {
    "prefix": "k8s-cronjob",
    "body": [
      "apiVersion: batch/v1",
      "kind: CronJob",
      "metadata:",
      "  name: ${1:cronjob-name}",
      "  namespace: ${2:default}",
      "spec:",
      "  schedule: \"${3:*/5 * * * *}\"",
      "  jobTemplate:",
      "    spec:",
      "      template:",
      "        spec:",
      "          containers:",
      "          - name: ${1:cronjob-name}",
      "            image: ${4:image:tag}",
      "            command: [\"${5:command}\"]",
      "          restartPolicy: ${6|OnFailure,Never|}",
      "$0"
    ],
    "description": "Kubernetes CronJob"
  }
}
